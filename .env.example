# Copy to .env and fill values (DO NOT commit your real .env)

PORT=5000
# Production-ready URI (preferred). Provide your own value; DO NOT commit secrets.
# Example: mongodb+srv://<user>:<pass>@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_URI=

# Cloudinary (fill with your credentials). DO NOT commit these values.
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional
CORS_ORIGIN=https://www.shop.sndgroup.net

# Alternate Mongo configuration (use either `MONGODB_URI` or the parts below)
# The values below are derived from the `MONGODB_URI` above.
# Alternate Mongo configuration (placeholders) - use only if you don't set MONGODB_URI
MONGODB_HOST=
MONGODB_DB=
MONGODB_USER=
MONGODB_PASS=
# Set to 'true' to use mongodb+srv when building URI from parts
MONGODB_USE_SRV=true
# Optional URI query params (e.g. retryWrites=true&w=majority)
MONGODB_OPTIONS=retryWrites=true&w=majority&appName=SND-Store
MONGODB_MAX_POOL_SIZE=10
